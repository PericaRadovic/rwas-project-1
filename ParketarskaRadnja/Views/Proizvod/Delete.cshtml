@model ParketarskaRadnja.Models.Proizvod

@{
    ViewBag.Title = "Obriši proizvod";
}

<center><h2>Obriši proizvod</h2></center>

<center>
    <h3>Da li ste sigurni da želite da obrišete ovaj proizvod?</h3>
</center>
<div>
    <h4>Proizvod</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NazivProizvoda)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NazivProizvoda)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cena)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Proizvod", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProizvodID)

        <div class="form-group">
            <input type="submit" value="Obriši" class="btn btn-danger" /> |
            @Html.ActionLink("Nazad na listu", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
