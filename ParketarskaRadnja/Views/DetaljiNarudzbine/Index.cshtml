@model IEnumerable<ParketarskaRadnja.Models.DetaljiNarudzbine>@{    ViewBag.Title = "Detalji Narudžbine";    bool isAdmin = User.IsInRole("Admin");}<center><h2>Detalji Narudžbine</h2></center><table class="table">    <thead>        <tr>            <th>                Narudžbina ID            </th>            <th>                Proizvod ID            </th>            <th>                Količina            </th>            <th>                Cena po jedinici            </th>            <th></th>        </tr>    </thead>    <tbody>        @foreach (var item in Model)        {<tr>    <td>        @Html.DisplayFor(modelItem => item.NarudzbinaID)    </td>    <td>        @Html.DisplayFor(modelItem => item.ProizvodID)    </td>    <td>        @Html.DisplayFor(modelItem => item.Kolicina)    </td>    <td>        @Html.DisplayFor(modelItem => item.CenaPoJedinici)    </td>    <td>        @Html.ActionLink("Detalji", "Details", new { id = item.DetaljNarudzbineID }, new { @class = "btn btn-primary" })        @if (isAdmin)        {           @:| @Html.ActionLink("Izmeni", "Edit", new { id = item.DetaljNarudzbineID }, new { @class = "btn btn-primary" })           @:| @Html.ActionLink("Obriši", "Delete", new { id = item.DetaljNarudzbineID }, new { @class = "btn btn-danger" })        }    </td></tr>}    </tbody></table>@if (isAdmin)
            {
                <p>                    @Html.ActionLink("Kreiraj novi detalj narudzbine", "Create", null, new { @class = "btn btn-success" })                </p>
            }